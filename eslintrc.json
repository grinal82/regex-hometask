{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-var": "error",
    "prefer-const": "error",
    "no-use-before-define": [
      "error",
      { "functions": false, "classes": true }
    ]
  }
}
